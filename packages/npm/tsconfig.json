{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": ["../../node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@graphql-sailboat/*": ["src/@graphql-func/*","packages/biolerplate/samples/imdb-top-movies/@graphql-func/*"],
      "@app": ["src/app.ts", "packages/biolerplate/samples/imdb-top-movies/app.ts"]
    }
  },
  "include": ["src/**/*"]
}
