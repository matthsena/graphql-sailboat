{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@Interfaces": ["src/interfaces/Interfaces.ts"],
      "@Controller": ["src/functions/controller.ts"],
      "@Unidades": ["src/@choices/Unidades.ts"],
      "@redis": ["src/cache/redis.ts"]
    }
  },
  "include": ["src/**/*"]
}